<Window x:Class="ReBirth.Pages.UserHelp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReBirth.Pages"
        mc:Ignorable="d"
        Title="Помощь" Height="350" Width="300" Icon="/Images/icon.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Border Background="#FF729FA2" Grid.ColumnSpan="2" Grid.RowSpan="3"/>

        <StackPanel Margin="0 10 0 0" Grid.Column="0" Grid.RowSpan="3">
            <TextBlock Text="Навигация по приложению:" Style="{StaticResource helptxt}"/>
            <TextBlock Text="Для детального просмотра необходимого упражнения, Вам необходимо нажать левой кнопкой мыши два раза по упражнению" Style="{StaticResource helptxt}"/>
        </StackPanel>
        <StackPanel Margin="0 65 0 0" Grid.Column="1">
            <Image Source="/Images/doubleclick.png"/>
        </StackPanel>
    </Grid>
</Window>
